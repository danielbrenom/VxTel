@if (Icon == string.Empty)
{
    <div class="input-field col-@ColumnSize s@(ColumnSize)">
        <input id="@Reference" type="text" class="validate typeahead" autocomplete="off" required>
        <label for="@Reference" style="margin-left: 70px">@Title</label>
    </div>
}
else
{
    <div class="input-field col-@ColumnSize s@(ColumnSize)">
        <i class="fa @Icon fa-lg prefix"></i>
        <input id="@Reference" type="text" class="validate typeahead" autocomplete="off" required>
        <label for="@Reference" style="margin-left: 70px">@Title</label>
    </div>
}

@code {
    [Parameter]
    public RenderFragment Title { get; set; }
    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string ColumnSize { get; set; } = "3";

    private string Reference = System.Guid.NewGuid().ToString("N");

}